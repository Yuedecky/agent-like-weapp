<view class='app-b-container'>
    <view class='input-section'>
        <view class='realname-input bottom-40'>
            <input type="text" value="{{realName}}" name="realName" maxlength='20' placeholder="请输入真实姓名" bind:blur='getRealNameValue' />
        </view>
        <view class='phone-input bottom-40'>
            <input type="tel" value="{{phone}}" name="applyPhone" maxlength='11' placeholder="请输入手机号" bind:blur='getPhoneNumberValue' />
        </view>
        <view class='code-input'>
            <input type='number' maxlength='6' value="{{code}}" placeholder='请输入验证码' name="applyCode" bind:blur='getCodeValue' />
            <button type='default' bind:tap='getApplyCode' class='code-btn' disabled='{{codeDisabled}}'>
                {{text}}
            </button>
        </view>
    </view>
    <button class="login-btn" disabled='{{disabled}}' hover-class='none' bind:tap='submit'>
        提交
    </button>
</view>