@import "/templates/order-item/order-item.wxss";
@import "/templates/footer/footer.wxss";

.m-order-header{
  font-size: 32rpx;
  color:#999;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.order-part{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}

.order-p-count{
  color: red;
  font-size: 34rpx;
  font-weight: bold;
}

.order-p-no{
  width:84%;
  height: 100%;
}

.order-p-status{
  width: 16%;
  height: 100%;
  text-align: center;
}

.to-paid-order{
  font-size: 34rpx;
  line-height: 40rpx;
  margin-left: 360rpx;
}


.order-btn{
  height: 60rpx;
  line-height: 60rpx;
}
.modal-image{
  width:540rpx;
  height: 400rpx;
}

.modal-text{
  text-align: center;
}
.none-data{
  text-align: center;
  font-size: 30rpx;
  color: #ccc;
}

.contact-only{
  margin-left: 130rpx;
}

.s-delivery-scope{
  width: 90%;
  margin: 0 auto;
  background: #fdfdfd;
  font-size: 34rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}


.address-info-text{
  color: #999;
  margin-left: 20rpx;
  padding-right: 20rpx;
}

.contact-or-cancel{
  width:90%;
  margin: 0 auto;
}
.delivery-address{
  text-overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.address-around{
  width: 100%;
  margin-bottom: 20rpx;
}