<import src="/templates/apply-basic/apply-basic.wxml"></import>
<import src="/templates/apply-address/apply-address.wxml"></import>
<import src="/templates/apply-qualification/apply-qualification.wxml"></import>
<view class='page'>
<view wx:if="{{pageIndex == 1}}">
  <template is='basic-info' data="{{text:codeText,codeDisabled:codeDisabled}}"></template>
</view>
<view wx:elif="{{pageIndex==2}}">
    <template is ='school-info' data="{{...school}}"></template>
    <view class="animation-element-wrapper" animation="{{animation}}" style="visibility:{{show ? 'visible':'hidden'}}">
     <view class="animation-element">
        <text class="left-bt" catchtap="hiddenFloatView"
         data-id="cancel">取消</text>
        <text class="right-bt" catchtap="hiddenFloatView" 
        data-id="makeSure">确定</text>
          <view class="line"></view> 
        <picker-view indicator-style = "height: 50rpx;" value="{{value}}" bindchange="bindChange">
        <!--省-->
        <picker-view-column>
           <view wx:for="{{provinces}}" wx:for-item="item" wx:key="id">
             {{item.name}}
          </view>
        </picker-view-column>
        <!--地级市-->
        <picker-view-column>
          <view wx:for="{{citys}}" wx:key="id">
            {{item.name}}
          </view>
        </picker-view-column>
        <!--区县-->
        <picker-view-column>
          <view wx:for="{{countys}}" wx:key="id">
            {{item.name}}
          </view>
        </picker-view-column>
        </picker-view>
  </view>
</view>
</view>



<view wx:else>
    <template is="qualification-info" data="{{...qualification}}"></template>
</view>

</view>
