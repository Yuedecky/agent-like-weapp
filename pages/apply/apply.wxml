<import src="/templates/apply-basic/apply-basic.wxml"></import>
<import src="/templates/apply-school/apply-school.wxml"></import>
<import src="/templates/apply-qualification/apply-qualification.wxml"></import>
<view class='apply-container'>
<view wx:if="{{pageIndex == 1}}">
  <template is='basic-info' data="{{text:'获取验证码'}}"></template>
</view>
<view wx:elif="{{pageIndex==2}}">
    <template is ='school-info' data="{{...school}}"></template>
    <view class="animation-element-wrapper" animation="{{animation}}" style="visibility:{{show ? 'visible':'hidden'}}" bindtap="hiddenFloatView" data-id="444">
     <view class="animation-element" catchtap="nono">
        <text class="left-bt" catchtap="hiddenFloatView" data-id="555">取消</text>
        <text class="right-bt" catchtap="hiddenFloatView" data-id="666">确定</text>
          <view class="line"></view> 
        <picker-view indicator-style = "height: 50rpx;" value="{{value}}" bindchange="bindChange">
        <!--省-->
        <picker-view-column>
           <view wx:for="{{provinces}}" wx:for-item="sheng" wx:key="">
             <view catchtap='onProvinceSelected' data-pid='{{sheng.id}}'>{{sheng.name}}</view>
          </view>
        </picker-view-column>
        <!--地级市-->
        <picker-view-column>
          <view wx:for="{{citys}}" wx:key="">
            {{item.name}}
          </view>
        </picker-view-column>
        <!--区县-->
        <picker-view-column>
          <view wx:for="{{countys}}" wx:key="">
            {{item.name}}
          </view>
        </picker-view-column>
        </picker-view>
    </view>
  </view>
</view>


<view wx:else>
    <template is="qualification-info" data="{{...qualification}}"></template>
</view>

</view>

