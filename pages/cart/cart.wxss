@import "/assets/wxss/common.wxss";
@import "/templates/footer/footer.wxss";
page{
  width: 100%;
  height:100%;
}

.cart-wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}

.empty-cart-img{
  width:180rpx;
  height: 200rpx;
}

.cart-image-view{
  align-items: center;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.go-index-btn{
  background-color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
  width: 180rpx;
  text-align: center;
  height: 60rpx;
}

button::after{
  border: none;
}

.go-cart-desc{
  font-size: 30rpx;
  line-height: 40rpx;
  width: 100%;
  color: #ccc;
  text-align: center;
}

.empty-cart{
  color: #999;
  height: 100%;
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.underline{
  color: #999;
  text-decoration: line-through;
}

.address-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.delivery-info{
  font-weight: bold;
}
.delivery-body{
  width:80%;
}

.header-wrapper{
  color: #fff;
  border-bottom: 1px solid #efefef;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}

.delivery-scope{
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  line-height: 50rpx;
  height:100rpx;
  font-size: 30rpx;
  background: #efefef;
  color: #221b1b;
}

.right-arrow{
    width: 9px;
    height: 9px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: absolute;
    right: 30rpx;
    top:30rpx;
    display: flex;
    transform: rotate(45deg);
}

.delivery-img{
  display: flex;
  align-items: center;
  justify-content: center;
}
.manage-header{
  padding: 0 20rpx;
}

.delivery-name{
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.accept-address{
  margin-left: 10rpx;
  overflow:hidden;
  vertical-align: middle;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.select-address{
  line-height: 100rpx;
  color: red;
  margin-left: 10rpx;
}

.main{
  flex: 1;
  width: 100%;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}


.footer{
  height:100rpx;
  width: 100%;
  font-size: 30rpx;
  color: #ccc;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}



.header{  
    background: #fff;  
    height: 90rpx;  
    display: flex;  
}

.check-box{  
    flex: 1;  
    display: flex;  
    line-height: 
    90rpx;  
    font-size: 30rpx;
}
.check-img{  
    width: 38rpx;  
    height: 38rpx;  
    margin-top:26rpx;
}
.check-text{  
    margin-left: 15rpx;  
    color:#333;
    line-height: 90rpx;
}
.header-text{
  font-size: 30rpx;  
  line-height: 90rpx;  
  padding:0 6rpx;  
  color: red;
}



.shop{
  background: #fff;  
  display: flex;  
  padding:20rpx;  
  border-bottom: 1px solid #efefef;
}
.shop-check-box{
  margin-top: 45rpx;
}
.shop-img{
  width: 200rpx;  
  height: 200rpx;  
  margin:0 20rpx;
}
.shop-detail{
  height: 100%;
  width: 100%;
}

.cart-item-name{
  font-size: 32rpx;  
  font-weight: bold;
  word-break:break-all;  
  display:-webkit-box;
  margin-bottom: -10rpx;
  -webkit-line-clamp:2;  
  -webkit-box-orient:vertical;  
  overflow:hidden;
}

.cart-item-type{
  font-size: 30rpx;  
  color: #333; 
}

.shop-detail-bottom{
  display: flex;
  width: 100%;
}

.shop-price{
  flex: 1;
  color: red;
}

.cart-price{
  font-size: 30rpx;
  font-weight: 500;
  line-height: 34rpx;
  color: #666;
}
.num-change{
  width: 40%;
  text-align: center;
  align-items: center;
  margin-left: 100rpx;
}
.shop-num{
  line-height: 38rpx;  
  height: 38rpx;  
  width: 60rpx;  
  text-align: center;  
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.add-icon,.minus-icon{
  width: 38rpx;  
  height: 38rpx;
}

.total-part{
  width:80%;
  height: 100%;
  text-align: left;
  color: #333;
}

.cart-price{
  width: 60%;
  height: 100%;
}

.footer-total-text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  margin-left: 20rpx;
  font-weight: bold;
  padding-top: 10rpx;
}

.footer-total-price{
  color: red;
}

.footer-total-submit{
  background:rgb(245, 1, 16);
  font-weight: bold;
  line-height: 100rpx;
  height: 100rpx;
  color:white;
  font-size: 46rpx;
  width: 280rpx;
  text-align: center;
}
