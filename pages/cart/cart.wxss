@import "/templates/footer/footer.wxss";

page {
  width: 100%;
  height: 100%;
}

.cart-wraper {
  width: 100%;
  height: 100%;
}

.load-flag-text {
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.empty-cart-img {
  width: 180rpx;
  height: 200rpx;
}

.cart-image-view {
  margin-top: 200rpx;
  align-items: center;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.go-index-btn {
  background-color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
  width: 180rpx;
  text-align: center;
  height: 60rpx;
}

button::after {
  border: none;
}

.go-cart-desc {
  font-size: 30rpx;
  line-height: 40rpx;
  width: 100%;
  color: #ccc;
  text-align: center;
}

.empty-cart {
  color: #999;
  height: 100%;
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.underline {
  color: #999;
  text-decoration: line-through;
}

.address-img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.manage-header {
  display: flex;
  height:100rpx;
  width: 100%;
  position: relative;
  flex-direction: row;
  justify-content: space-around;
}

.cart-main {
  flex: 1;
  width: 100%;
  position: relative;
  height: 90%;
}

.main-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}

.cart-footer {
  width: 100%;
  font-size: 30rpx;
  color: #ccc;
  border-top: 1px solid #ccc;
  line-height: 80rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}

.check-box {
  display: flex;
  line-height: 90rpx;
  font-size: 30rpx;
  align-items: center;
  position: absolute;
  left: 20rpx;
  bottom: 0rpx;
}

.check-img {
  width: 38rpx;
  height: 38rpx;
}

.check-text {
  margin-left: 15rpx;
  color: #333;
  line-height: 90rpx;
}

.header-text {
  font-size: 30rpx;
  line-height: 90rpx;
  color: #069;
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
}

.shop {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  width: 100%;
  position: relative;
  border-top: 1px solid #efefef;
}

.cart-product {
  width: 80%;
}

.cart-num {
  position: absolute;
  top: 40%;
  right: 20rpx;
  width: 12%;
}

.shop-check-box {
  width: 8%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.cart-item-image {
  width: 180rpx;
}

.cart-img {
  width: 160rpx;
  height: 200rpx;
}

.shop-detail {
  height: 100%;
  width: 370rpx;
}

.total-part {
  width: 80%;
  height: 100%;
  text-align: left;
  color: #333;
}

.cart-price {
  width: 60%;
  height: 100%;
}

.footer-total-text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  margin-left: 20rpx;
  padding-top: 10rpx;
}

.footer-total-price {
  color: red;
}

.footer-total-submit {
  line-height: 100rpx;
  height: 100rpx;
  color: white;
  font-size: 40rpx;
  width: 280rpx;
  text-align: center;
}

.send-submit-btn {
  width: 100%;
  height: 100%;
  border-radius: 0;
}
