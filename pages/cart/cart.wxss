page{
  width: 100%;
  height:100%;
}

.cart-wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}

.header-wrapper{
  color: #fff;
  padding: 0 20rpx;  
  border-bottom: 1px solid #efefef;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}

.delivery-scope{
  height: 200rpx;
  width: 100%;
  line-height: 50rpx;
  font-size: 40rpx;
  font-weight: 500;
  text-align: left;
  padding-top: 10rpx;
  background: #efefef;
  color: #221b1b;
}

.delivery-scope view{
  padding-left: 20rpx;
}


.main{
  flex: 1;
  position: relative;
}

.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.main-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}

card{
  width: 47vw;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.card-box{
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  background: #ccc;
}


.card-content{
  color: blue;
}

.footer{
  height:100rpx;
  width: 100%;
  font-size: 34rpx;
  color: #ccc;
  line-height: 100rpx;
  flex: 0 0 100rpx; /* 不放大不缩小固定100rpx */
}



.header{  
    background: #fff;  
    height: 90rpx;  
    display: flex;  
}

.check-box{  
    flex: 1;  
    display: flex;  
    line-height: 90rpx;  
    font-size: 30rpx;
}
.check-img{  
    width: 38rpx;  
    height: 38rpx;  
    margin-top:26rpx;
}
.check-text{  
    margin-left: 15rpx;  
    color:#333;
    line-height: 90rpx;
}
.header-text{
  font-size: 30rpx;  
  line-height: 90rpx;  
  padding:0 6rpx;  
  color: #ff9600;
}



.shop{
  background: #fff;  
  display: flex;  
  padding:20rpx;  
  border-bottom: 1px solid #efefef;
}
.shop-check-box{
  margin-top: 45rpx;
}
.shop-img{
  width: 180rpx;  
  height: 180rpx;  
  margin:0 20rpx;
}
.shop-detail{
  flex: 1;
}
.shop-name{
  font-size: 30rpx;  
  line-height: 40rpx;  
  display: block;  
  max-height: 80rpx;  
  word-break:break-all;  
  display:-webkit-box;  
  -webkit-line-clamp:2;  
  -webkit-box-orient:vertical;  
  overflow:hidden;
}
.shop-type{
  display: block;  
  font-size: 26rpx;  
  color: #ccc;  
  line-height: 50rpx;
}
.shop-detail-bottom{
  display: flex;
}
.shop-price{
  line-height: 50rpx;  
  flex: 1;  
}
.num-change{
  display: flex;  
  padding-top: 11rpx;
}
.shop-num{
  line-height: 38rpx;  
  height: 38rpx;  
  width: 60rpx;  
  text-align: center;  
  font-size: 30rpx;
}
.add-icon,.minus-icon{
  width: 38rpx;  
  height: 38rpx;
}

.total-part{
  width:80%;
  height: 100%;
  color: #333;
}

.footer-total-text{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.footer-total-price{
  color: greenyellow;
}

.footer-total-submit{
  background:rgb(245, 1, 16);
  font-weight: bold;
  line-height: 100rpx;
  height: 100rpx;
  color:white;
  font-size: 46rpx;
  width: 240rpx;
  text-align: center;
}
