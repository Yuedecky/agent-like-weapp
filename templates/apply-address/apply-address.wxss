.school-address-holder{
  width: 100%;
}
.school-address-selector{
  padding-top:16rpx;
}
.schoolname-input {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.right-arrow {
    display :inline-block;
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    top: 400rpx;
    right: 50rpx;
}


.infoText{
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center; 
}

.selector-address{
  width:20rpx;
  height: 40rpx;
}


picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

