<template name='school-info'>
<view class='school-container'>
 <view class='basic-title bottom-100'>
学校信息
  </view>
   <view class='input-section flow-column middle-center'>
  <view class='schoolname-input bottom-40'>
           <input type="text" value="{{schoolName}}" maxlength='20' placeholder="请输入学校名称" auto-focus='true' bindinput='getSchoolNameValue'/>
        </view>
        <view class='school-address-input bottom-40'>
           <input type="text" value="{{schoolAddress}}" maxlength='50' placeholder="请输入学校地址" bindinput='getSchoolAddressValue'/>
        </view>
         <view>
          <input type='text' maxlength='50' value="{{roomNo}}" placeholder='详细地址（精确到楼号-宿舍号）' bindinput='getRoomNoValue'/>
        </view>
        </view>
        <button type='primary' class="login-btn"  disabled='{{disabled}}'   hover-class='none'
         bindtap='nextStepTwo'>下一步</button>
</view>
</template>