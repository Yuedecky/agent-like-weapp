@import "/assets/wxss/common.wxss";
.address-template-container{
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
}

.address-template-header{
  font-size: 34rpx;
  font-weight: bold;
  height: 50rpx;
  line-height: 50rpx;
}

.address-template-body{
  font-size: 30rpx;
  line-height: 50rpx;
  height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.address-detail{
  width: 80%;
  height: 100rpx;
  padding-right: 10rpx;
  border-right: 1px solid #ccc;
}

.default-address{
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
  vertical-align: middle;
  color: rgb(12, 200, 12);
  border: 1px solid rgb(12, 200, 12);
}

.action-sheet{
  width: 20%;
  color: #999;
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
}
